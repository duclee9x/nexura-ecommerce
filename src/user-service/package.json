    "prisma:studio": "prisma studio"
  },

  "dependencies": {
    "@nexura/common": "workspace:*",
    "@prisma/client": "^6.6.0"
  },
  "devDependencies": {
    "prisma": "^6.6.0"
  },
  "peerDependencies": {
    "typescript": "^5"
