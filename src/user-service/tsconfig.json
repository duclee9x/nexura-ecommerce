{
    "compilerOptions": {
        "target": "es2022",
        "module": "NodeNext",
        "outDir": "./dist",
        "noImplicitAny": true,
        "rootDir": "./src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
    ]
}