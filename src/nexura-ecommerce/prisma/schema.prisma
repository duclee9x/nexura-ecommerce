datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(cuid())
  email            String       @unique
  firstName        String
  lastName         String?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  role             String
  status           String
  avatar           String?
  password         String
  twoFactorEnabled Boolean
  lastLogin        DateTime?
  authToken        String?
  refreshToken     String?
  permissions      Permission[]
}

model Permission {
  id       String   @id @default(cuid())
  resource String
  actions  String[]
  User     User[]
}
