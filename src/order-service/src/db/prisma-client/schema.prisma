generator client {
  provider = "prisma-client-js"
  output   = "../src/db/prisma-client"
}

datasource db {
  provider = "mysql"
  url      = env("ORDER_SERVICE_DB_URL")
}

model Order {
  id                String      @id @default(uuid())
  userId            String
  status            String      @default("pending")
  totalAmount       Float
  shippingAddressId String
  items             OrderItem[]
  paymentId         String? // Reference to payment service
  shipping          Shipping?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  @@index([userId])
  @@index([status])
  @@index([shippingAddressId])
  @@index([paymentId])
}

model OrderItem {
  id        String   @id @default(uuid())
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
  variantId String
  quantity  Int
  productId String
  price     Float
  image     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([orderId])
  @@index([variantId])
}

model Shipping {
  id             String   @id @default(uuid())
  order          Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId        String   @unique
  method         String
  trackingNumber String?
  status         String   @default("pending")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
