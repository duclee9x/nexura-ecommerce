// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/db/prisma-client"
}

datasource db {
  provider = "mysql"
  url      = env("ORDER_SERVICE_DB_URL")
}

model Order {
  id String @id @default(uuid())
  userId String
  totalAmount Float
  shippingAddressId String
  paymentMethod String
  paymentAmount Float
  paymentCurrency String
  items OrderItem[]
  shippingMethod String
  shippingCost Float
  subtotal Float
  total Float
  currencyCode String
  status OrderStatus @default(ORDER_PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum OrderStatus {
  ORDER_PENDING
  ORDER_PROCESSING
  ORDER_SHIPPED
  ORDER_COMPENSATING
  ORDER_DELIVERED
  ORDER_CANCELLED
  ORDER_COMPLETED
  ORDER_FAILED
  ORDER_REFUNDED
  ORDER_EXPIRED
  ORDER_ON_HOLD
}

model OrderItem {
  id String @id @default(uuid())
  orderId String
  productId String
  variantId String
  productName String
  productSlug String
  variantName String
  image String
  sku String
  quantity Int
  price Float
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  order Order @relation(fields: [orderId], references: [id])
}
